<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/backgrou"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <ImageView
        android:id="@+id/internet"
        android:visibility="gone"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:elevation="2dp"
        android:src="@drawable/internet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView

        android:id="@+id/imageView2"
        android:layout_width="287dp"
        android:layout_height="243dp"
        android:layout_marginTop="104dp"
        android:src="@drawable/ikona"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.443"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:background="@drawable/rounded_corners"
        android:id="@+id/textView2"
        android:layout_width="273dp"
        android:layout_height="41dp"
        android:hint="Login"
        android:fontFamily="@font/concert"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:textColorHint="#C5C5C5"
        android:paddingStart="16dp"
        android:textSize="50px"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.653" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="177dp"
        android:layout_height="60dp"
        android:layout_marginBottom="280dp"
        android:fontFamily="@font/gloria"
        android:text="Who are you?"
        android:textColor="@color/black"
        android:textSize="66px"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/login"
        android:layout_width="273dp"
        android:layout_height="41dp"
        android:background="@drawable/rounded_corners"         android:elevation="20dp"
        android:gravity="center_vertical"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:fontFamily="@font/concert"
        android:text="Set login"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="43px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.749" />
</androidx.constraintlayout.widget.ConstraintLayout>